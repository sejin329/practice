package prob;
import java.util.Scanner;
public class Main {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int N = sc.nextInt();
		sc.close();
		for(int i = 1; i<=N; i++)
		{
			for(int q = 1; q<=N-i; q++) {
				System.out.print(" ");
			}
			for (int r = 0; r < i; r++) {
				System.out.print("*");
			}
		System.out.println();
		}
		
	}
}
